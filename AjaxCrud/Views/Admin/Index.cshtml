@model List<AjaxCrud.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ad
            </th>
            <th>
                Soyad
            </th>
            <th>
                Kullanıcı adı
            </th>
            <th>
                Şifre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.TextBoxFor(modelItem => item.AdminName)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.AdminSurname)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.AdminUsername)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.AdminPasword)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AdminId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AdminId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
